---
import clientsData from "@/data/clientData";
---

<section class="testimonial" id="testimonial">
  <div class="content">
    <span>Clients always get</span>
    <span>Exceptional Work</span>
    <span>from me...</span>
  </div>
  <div
    class="blur"
    style={{ "--bg": "skyblue", "--top": "13rem", "--left": "-18rem" }}
  >
  </div>
  <swiper-container
    slider-per-view="1"
    pagination="true"
    pagination-clickable="true"
    class="testimonial-swiper"
  >
    {
      clientsData.map((client) => (
        <swiper-slide>
          <figure class="testimonial-slider">
            <img
              src={client.img.src}
              alt=""
              width={client.img.width}
              height={client.img.height}
            />
            <figcaption>{client.review}</figcaption>
          </figure>
        </swiper-slide>
      ))
    }
  </swiper-container>
</section>

<style>
  .testimonial {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding-inline: 3rem;
    gap: 2rem;
    position: relative;
    @media (max-width: 960px) {
      padding: 0;
    }
  }

  .testimonial .content {
    margin-right: auto;
  }

  .testimonial .content > * {
    font-size: 2rem;
    font-weight: bold;
  }

  .content > *:nth-child(2) {
    color: var(--orange);
  }

  .testimonial .swiper {
    overflow: auto;
    width: 100%;
    height: 70%;
  }

  .testimonial-swiper {
    width: 100%;
  }

  .testimonial-swiper :global(> swiper-slide) {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .testimonial-swiper .testimonial-slider {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    gap: 1rem;
    padding: 2rem;
    width: 30rem;
    min-height: 12rem;
    background-color: rgba(255, 255, 255, 0.26);
    border: 7px solid var(--blueCard);
    box-shadow: var(--boxShadow);
    border-radius: 20px;
  }

  ..testimonial-swiper :global(.swiper-pagination-bullet-active) {
    background: var(--orange);
  }
  .testimonial-swiper :global(.testimonial-slider > img) {
    width: 6rem;
    height: 6rem;
    border-radius: 50%;

    @media (max-width: 960px) {
      width: 70px;
      height: 70px;
    }
  }
  .testimonial-swiper :global(> swiper-slide > figcaption) {
    color: var(--gray);
  }
</style>

<script>
  import { register } from "swiper/element/bundle";
  register();
</script>
