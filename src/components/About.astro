<style>
  .about {
    position: relative;
    margin-inline: auto;
    display: grid;
    grid-template-rows: repeat(auto-fit, 48px 1fr);
    place-content: center;
    gap: 3rem;
    min-height: 90vh;
    margin-block: 8rem;

    @media (max-width: 960px) {
      flex-direction: column;
      min-height: 55rem;
      padding: 0;
      gap: 5rem;
    }
  }

  .about > * {
    flex: 1;
  }

  .about .content {
    position: relative;
  }

  .content > .title {
    margin-bottom: 2.5rem;
    font-size: 2rem;
    font-weight: bold;
  }

  .content > .content__title {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 2rem;
    & > * {
      flex: 1 1 375px;
    }
  }

  .about .illustration {
    position: relative;
    isolation: isolate;

    @media (max-width: 960px) {
      display: flex;
      align-items: flex-end;
      justify-content: start;
      scale: 0.7;
    }
  }

  .content__title :global(astro-island span) {
    display: block;
  }

  .content__title :global(astro-island span:not(:first-of-type)) {
    margin-top: 1rem;
  }

  .illustration :global(> astro-island > .main-circle) {
    position: relative;
    display: grid;
    place-items: center;

    @media (max-width: 960px) {
      position: revert;
    }
  }
</style>
