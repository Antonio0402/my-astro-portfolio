---
import Seo3D from '../asset/Seo3D.webp';
import MotionContainer from './MotionContainer';
import ExpandableCard from './ExpandableCard/ExpandableCard';
import { aboutMeData } from '@/data/aboutMeData';

import i18next from 'i18next';

const currentLanguage = i18next.language || 'vi';
---

<div class="about" id="about">
  <div class="content">
    <h2 class="title">{currentLanguage === 'en' ? 'Who is Thanh Huy Doan ðŸ¤”' : 'LÃ½ lá»‹ch cÃ¡ nhÃ¢n ðŸ¤”'}</h2>
    <div class="content__title">
      {
        aboutMeData.map((data, index) => (
          <div>
            <ExpandableCard
              title={data.title[currentLanguage]}
              subtitle={data?.subtitle?.[currentLanguage] ? data.subtitle[currentLanguage] : ''}
              index={index + 1}
              client:only="react"
            >
              {data.description[currentLanguage].map((desc) => (
                <span>{desc}</span>
              ))}
            </ExpandableCard>
          </div>
        ))
      }
    </div>
  </div>
  <div
    class="blur"
    style={{
      '--bg': '#ABF1FF94',
      '--top': '13rem',
      '--left': '-18rem',
    }}
  >
  </div>
  <div class="illustration">
    <!-- <MotionContainer
      client:load
      initial={{ scale: 0 }}
      whileInView={{ scale: 1 }}
      viewport={{ margin: "-40px" }}
      transition={{ duration: 1 }}
      className="main-circle"
    >
      <img src={Seo3D.src} width={Seo3D.width} alt="" />
    </MotionContainer> -->
    <div class="blur" style={{ '--bg': 'var(--purple)', '--top': '1rem', '--left': '5%' }}></div>
  </div>
