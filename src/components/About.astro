  <style>
    .about {
      display: flex;
      align-items: center;
      margin-inline: auto;
      gap: 3rem;
      min-height: 90vh;
      margin-block: 8rem;

      @media (max-width: 960px) {
        flex-direction: column;
        min-height: 55rem;
        padding: 0;
        gap: 5rem;
      }
    }

    .about > * {
      flex: 1;
    }

    .about .content {
      position: relative;
      min-width: 320px;
      max-width: 60ch;
    }

    .content > .content__title > :where(:nth-child(2), :last-child) {
      --fw: 400;
      --fs: clamp(0.875rem, 1.65vw, 1rem);
      --color: var(--clr-text, --gray);
      margin-block: 1rem;
      & > * {
        display: block;
      }
      & > * + * {
        margin-top: 1rem;
      }
    }

    .content :global(> .content__title > :nth-child(3)) {
      --fs: 1.5rem;
    }
    .content :global(> .content__title > :nth-child(4)) {
      --fw: 700;
      --fs: 2.5rem;
      --color: var(--orange);
    }
    .content :global(> astro-island > .hired-button) {
      display: inline-block;
      width: fit-content;
      min-height: 2rem;
      margin-top: 4rem;
    }

    .about .illustration {
      position: relative;
      isolation: isolate;

      @media (max-width: 960px) {
        display: flex;
        align-items: flex-end;
        justify-content: start;
        scale: 0.7;
      }
    }

    .illustration :global(> astro-island > .main-circle) {
      position: relative;
      /* left: 9rem;
      top: 2rem; */
      display: grid;
      place-items: center;
      /* width: 18rem;
      height: 18rem;
      border-radius: 50%;
      background-color: rgba(255, 255, 255, 0.26);
      border: 2px solid rgba(255, 255, 255, 0.3);
      backdrop-filter: blur(4px);
      -webkit-backdrop-filter: blur(4px);
      box-shadow: var(--smboxShadow); */

      @media (max-width: 960px) {
        position: revert;
      }
    }

    .illustration .icon-circle {
      position: absolute;
      left: var(--left);
      top: var(--top);
      width: 6rem;
      height: 6rem;
      border: 5px solid #ebebeb;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      box-shadow: var(--smboxShadow);
      background-color: white;
    }

    .illustration .back-circle {
      position: absolute;
      height: 13rem;
      width: 13rem;
      border-radius: 50%;
      left: var(--left);
      top: var(--top);
      background-color: var(--bg);
      z-index: -1;
      @media (max-width: 960px) {
        left: 8rem !important;
      }
    }
  </style>
